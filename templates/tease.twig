<div class="card card-small-long" id="{{post.slug}}">
    <div class="card-header">
        {% block content %}
        <h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
        <p>{{post.preview}}</p>

        {% endblock %}
    </div>
    {% if post.get_thumbnail %}
    <picture>
        <a href="{{post.link}}"><img src="{{post.thumbnail}}" alt="{{post.thumbnail.alt}}"></a>
    </picture>
    {% endif %}
</div>
